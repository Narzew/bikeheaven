<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.narzew.bikeheaven.MainActivity">

    <Button
        android:id="@+id/button_climb_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/climb_map"
        android:onClick="climb_map_clicked"/>

    <Button
        android:id="@+id/button_setings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_activity"
        android:onClick="settings_settings"/>

    <Button
        android:id="@+id/button_appinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_info"
        android:onClick="app_info_clicked"/>

    <Button
        android:id="@+id/button_update_database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update database"
        android:onClick="update_database_clicked"/>

    <Button
        android:id="@+id/button_sample_climb_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample climb information"
        android:onClick="sample_climb_information_clicked"/>

</RelativeLayout>
